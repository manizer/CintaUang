@model CintaUang.ViewModels.CategoryViewModels.CategoriesTableViewModel

<table id="categories-datatable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nama</th>
        </tr>
    </thead>
    <tbody>
        
    </tbody>
</table>

<script type="text/javascript">
    var table =
        $("#categories-datatable").DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "/Category/DTT",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                { "data": "categoryId", "orderable": false, "className": "CategoryId" },
                { "data": "categoryName", "orderable": false, "className": "CategoryName" },
            ]
        });
</script>