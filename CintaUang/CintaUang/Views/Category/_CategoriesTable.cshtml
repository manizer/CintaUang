@model CintaUang.ViewModels.CategoryViewModels.CategoriesTableViewModel

<table id="categories-datatable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nama</th>
        </tr>
    </thead>
    <tbody>
        @*@foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
            </tr>
        }*@
    </tbody>
</table>


<script type="text/javascript"> 
        $("#categories-datatable").DataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "orderMulti": false,
            "ajax": {
                "url": "/Category/DTT",
                "type": "GET",
                "datatype": "json"
            },
            "columnDefs":
                [{
                    "targets": [0],
                    "visible": false,
                    "searchable": false
                }],
            "columns": [
                { "data": "categoryId", "orderable": false, "className": "CategoryId" },
                { "data": "categoryName", "orderable": false, "className": "CategoryName" },
            ]
        });
        
</script>
